<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="nav navbar-nav navbar-left">
        <a><%= link_to "Sign Out", github_logout_path, class: "logout" %></a>
        <a><%= link_to "Activty Feed", events_path %></a>
        <a><%= link_to "FakeGitHub", dashboard_index_path, class: "navbar-brand" %></a>
    </div>
    <div class="nav navbar-nav navbar-right">
      <li>Repositories <span class="badge"><%= @repositories.count %></span></li>
      <li>Starred <span class="badge"><%= @starred.count %></span></li>
      <li>Followers <span class="badge"><%= @followers.count %></span></li>
      <li>Following <span class="badge"><%= @following.count %></span></li>
    </div>
  </div>
</nav>
<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>My Recent Activity/Commits</h2>
        <table class="table">
          <tbody>
          <% @commits.each do |commit| %>
            <tr>
              <td>
                <%= commit[:repo] %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-6">
        <h2>Activity/Commits of followed users</h2>
        <table class="table">
          <tbody>
          <% @following_commits.each do |commit| %>
            <tr>
              <td>
                <%= commit[:repo] %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
